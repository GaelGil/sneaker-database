<%- contentFor('title') %>Home
<%- contentFor('body') %>

<style>
  .showcase h2 {
    color: white;
  }

  .showcase p {
    color: white;
  }
</style>

  <header class="masthead text-white text-center" style="background-color:lightgray;">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h1 class="mb-5">Sneakers</h1>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <form method="GET" action="sneakers/search">
            <div class="form-row">
              <div class="col-12 col-md-9 mb-2 mb-md-0">
                <input type="text" class="form-control form-control-lg" name="search" placeholder="Search Sneakers">
              </div>
              <div class="col-12 col-md-3">
                <button type="submit" class="btn btn-block btn-lg btn-primary">Search</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </header>

  
  <!-- popular -->
  <br>
  <section class="testimonials text-center">
    <div id="popular" class="container">
      <h2 class="mb-5">Popular</h2>

    </div>
  </section>


    <!-- Image Showcases -->
    <section class="showcase">
      <div class="container-fluid p-0">
        <div class="row no-gutters">
  
          <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('images/sneakerPile.jpg');"></div>
          <div class="col-lg-6 order-lg-1 my-auto showcase-text">
            <h2>About</h2>
            <p class="lead mb-0">In this website you can find some of the most popular sneakers and compare their prices on resell websites to see where it is more convinient to buy at.</p>
          </div>
        </div>
        <div class="row no-gutters">
          <div class="col-lg-6 text-white showcase-img" style="background-image: url('images/pairOfShoes.jpg');"></div>
          <div class="col-lg-6 my-auto showcase-text">
            <h2>Other Stuff</h2>
            <p class="lead mb-0">Other</p>
          </div>
        </div>
      </div>
    <!-- Testimonials -->


    <p class="apiData" style="display: none;"> <%= products %> </p>


    <script type="text/javascript" src="/scripts/homePage.js"></script>